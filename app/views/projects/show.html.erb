<!-- app/views/projects/show.html.erb -->
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @project %>

    <%= link_to "Edit this project", edit_project_path(@project), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to projects", projects_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Add new phase", new_project_phase_path(@project), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this project", @project, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>

<!-- Phases Heading and Filter -->
<div class="flex justify-between items-center my-4">
  <div>
    <h1 class="text-2xl font-semibold text-gray-800">Phases</h1>
    <p class="text-gray-600 text-sm">
      Total Phases: 
      <%= params[:phase_status].present? ? @phases.where(status: params[:phase_status]).count : @phases.count %>
    </p>
  </div>
  <div>
    <%= form_with url: project_path(@project), method: :get, local: true do %>
      <div class="relative">
        <%= select_tag :phase_status, 
                       options_for_select([["All", ""]] + Phase.statuses.keys.map { |status| [status.humanize, status] }, params[:phase_status]), 
                       class: "rounded-lg py-2 pl-10 pr-8 bg-gray-100 text-gray-800 cursor-pointer appearance-none", 
                       onchange: "this.form.submit();" %>
        <div class="absolute inset-y-0 left-0 pl-2 flex items-center pointer-events-none">
          <!-- Custom Filter Icon -->
          <svg width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22 3H2L10 12V19.2L14 21V12L22 3Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="phases" class="min-w-full space-y-6">
  <% @phases.each do |phase| %>
    <div class="bg-white border-b border-gray-300 rounded-lg transition-all duration-300 hover:bg-gray-100">
      <div class="px-6 py-4">
        <div class="flex justify-between items-center mb-2">
          <h2 class="text-xl font-semibold text-gray-800"><%= phase.title %></h2>
          <%# Example status-based color bg, replace with your logic %>
          <% status_class = case phase.status
                when 'completed' then 'bg-green-100 text-green-800'
                when 'in-progress' then 'bg-yellow-100 text-yellow-800'
                when 'not-started' then 'bg-red-100 text-red-800'
                else 'bg-gray-100 text-gray-800'
              end %>
          <span class="inline-block px-3 py-1 rounded-full text-sm font-semibold <%= status_class %>">
            <%= phase.status.titleize %>
          </span>
        </div>
        <p class="text-gray-600 text-sm">
          <% if phase.start_date %>
            <strong>Start Date:</strong> <%= phase.start_date.strftime("%b %d, %Y") %><br>
          <% end %>
          <% if phase.end_end %>
            <strong>End Date:</strong> <%= phase.end_end.strftime("%b %d, %Y") %>
          <% end %>
        </p>
        <p class="mt-2 text-gray-600 text-sm"><%= phase.description %></p>
        <div class="mt-4 flex justify-end">
          <%= link_to "Show this phase", project_phase_path(@project, phase), class: "px-5 py-2 rounded-md text-sm font-medium  bg-gray-100" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

  </div>
</div>
